<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GuardianNewsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_between_elements</item>
        <item name="android:layout_marginRight">@dimen/margin_between_elements</item>
        <item name="android:layout_marginTop">@dimen/margin_between_elements</item>
    </style>

    <style name="GuardianNewViewLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_between_elements</item>
    </style>

</resources>
